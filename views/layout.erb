<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Blackjack</title>
    <link rel="stylesheet" href="/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/application.css" />
    <script language="javascript" type="text/javascript" src="/vendor/bootstrap/js/jquery-1.11.0.min.js"></script>
    <script language="javascript" type="text/javascript" src="/vendor/bootstrap/js/bootstrap.min.js"></script>
  </head>
  <body style="padding-top: 50px;">

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
            <a class="brand">Blackjack</a>
            <ul class="nav">
              <li <%= request.path == "/"      ? "class=\"active\"" : "" %>><a href="/">Home</a></li>
              <li <%= request.path == "/start" ? "class=\"active\"" : "" %>><a href="/start">Start</a></li>
            </ul>
        </div>
      </div>
    </div>

  <div class="container">
    <%if @alert_error %>
      <div class="alert alert-error"><%= @alert_error %></div>
    <% elsif @alert_success %>
      <div class="alert alert-success"><%= @alert_success %></div>
    <% elsif @alert_info %>
      <div class="alert alert-info"><%= @alert_info %></div>
    <% end %>

    <%= yield %>
  </div>

    
  </body>
</html>
